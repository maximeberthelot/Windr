use_frameworks!

target 'Wandr' do
    
    #----o Play with API :)
    source 'https://github.com/CocoaPods/Specs.git'
    platform :ios, '8.0'
    use_frameworks!
    
    pod 'Alamofire', '~> 3.0'
    
    #----o Animate our app !
    pod 'Spring',
    :git => 'https://github.com/MengTo/Spring.git',
    :branch => 'swift2'
    
    #----o Add SDK FB
    pod "FBSDKCoreKit";
    pod "FBSDKLoginKit";
    
    #----o Secure CoreData
    pod 'Locksmith'
    
    #----o Tinder Gesture
    pod 'ZLSwipeableViewSwift'
    pod 'performSelector-swift'
    pod 'UIColor+FlatColors'
    pod 'Cartography'
    pod 'ReactiveUI'

end

